<!DOCTYPE html>
<html>
<head>
    <% include headerStuff.ejs %>
</head>

<style>
    table {
        table-layout: fixed;
    }
    .headerRow{
        width: 50%;
    }
    repoName{
        text-align: center;
    }

</style>
<body>
    <% include navigation.ejs %>
    <div class="container">
        <div clas="row">
            <div class="col-lg-12 text-center">
                <h2><%= title %></h2>
            </div>
        </div> <!-- .row -->
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-1">
                 <div class="row">
                     <h4>Github User Data</h4>
                 </div> <!-- .row -->
                <table class="add-margin-top" style="width: 100%;">
                    <tr>
                        <td class="headerRow"><b>Github Name:</b></td>
                        <td class="pull-left"><%=userData['login']%></td>
                    </tr>
                    <tr>
                        <td class="headerRow"><b>Github Link:</b></td>
                        <td class="pull-left"><a href="<%=userData['html_url']%>" target="_blank">Link</a></td>
                    </tr>
                    <tr>
                        <td class="headerRow"><b>Repositories:</b></td>
                        <td class="pull-left"><%=userData['public_repos']%></td>
                    </tr>
                    <tr>
                        <td class="headerRow"><b>Followers:</b></td>
                        <td class="pull-left"><%=userData['followers']%></td>
                    </tr>
                    <tr>
                        <td class="headerRow"><b>Following:</b></td>
                        <td class="pull-left"><%=userData['following']%></td>
                    </tr>
                    <tr>
                        <td class="headerRow"><b>Account Created:</b></td>
                        <td class="pull-left"><%=userData['created_at'].substring(0, 10)%></td>
                    </tr>
                    <tr>
                        <td class="headerRow"><b>Last Update:</b></td>
                        <td class="pull-left"><%=userData['updated_at'].substring(0, 10)%></td>
                    </tr>
                </table>
            </div> <!-- .col-md-3-->
             <div class="col-md-7">
                 <div class="row">
                    <h4>Project Links</h4>
                 </div> <!-- .row -->

                 <div class="add-margin-top row">
                     <% for(var repo in repoData) { %>
                     <div class="add-margin-top col-md-10 col-md-offset-1" style="border-bottom: solid 1px;">
                         <div class="col-md-12">
                             <h4><%=repoData[repo]['name']%></h4>
                         </div>
                         <div class="col-md-3">
                             Git Url: <br/><a href="<%=repoData[repo]['clone_url']%>" target="_blank">Link</a>
                         </div>
                         <div class="col-md-4 col-md-offset-1">
                             <% var cloneUrl = repoData[repo]['svn_url'] + '/archive/master.zip'; %>
                             Clone to Desktop: <br/><a href=<%=cloneUrl%>>Clone</a>
                         </div>

                         <div class="col-md-3 col-md-offset-1">
                             Last Update: <br/><%=repoData[repo]['updated_at'].substring(0, 10)%>
                         </div>
                     </div>

                     <% } %>

                 </div>
            </div> <!-- .col-md-9-->
        </div> <!-- .row -->
    </div> <!-- .container -->
    <% include footerStuff.ejs %>
</body>
</html>

