    <div class="container">

        <div class="row">
            <div class="col-md-12 text-center">
                <h2><%= title %></h2>
                <hr />
            </div> <!-- .col-md-12 -->
        </div> <!-- .row -->

        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <h3>Contact Info:</h3>
                <p>
                    <strong>E-Mail:</strong> skrohn86@gmail.com
                </p>
            </div>
            <form class="col-md-4">
